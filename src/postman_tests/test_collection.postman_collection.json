		{
			"name": "New game",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"console.log(\"=== DEBUG NEW GAME REQUEST ===\");",
							"",
							"// 1. Проверяем переменные окружения",
							"console.log(\"Environment variables:\");",
							"console.log(\"authHeader =\", pm.environment.get(\"authHeader\"));",
							"console.log(\"username =\", pm.environment.get(\"username\"));",
							"console.log(\"password =\", pm.environment.get(\"password\"));",
							"console.log(\"userId =\", pm.environment.get(\"userId\"));",
							"",
							"// 2. Проверяем заголовки, которые будут отправлены",
							"console.log(\"\\nRequest headers:\");",
							"const headers = pm.request.headers;",
							"headers.each(header => {",
							"    if (header.key === \"Authorization\") {",
							"        console.log(`${header.key}: ${header.value}`);",
							"        ",
							"        // Декодируем Base64 для проверки",
							"        const authValue = header.value;",
							"        if (authValue && authValue.startsWith(\"Basic \")) {",
							"            const base64Part = authValue.substring(6);",
							"            try {",
							"                const decoded = atob(base64Part);",
							"                console.log(\"Decoded credentials:\", decoded);",
							"                const [user, pass] = decoded.split(\":\");",
							"                console.log(\"Username from header:\", user);",
							"                console.log(\"Password from header:\", pass);",
							"            } catch (e) {",
							"                console.log(\"Error decoding Base64:\", e.message);",
							"            }",
							"        }",
							"    }",
							"});",
							"",
							"// 3. Проверяем URL",
							"console.log(\"\\nRequest URL:\", pm.request.url.toString());"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Game created\", () => {",
							"    const json = pm.response.json();",
							"    pm.expect(json.gameId).to.not.be.null;",
							"    pm.expect(json.status).to.equal(\"NEW_GAME\");",
							"    pm.expect(json.board).to.eql([[0,0,0],[0,0,0],[0,0,0]]);",
							"    pm.environment.set(\"gameId\", json.gameId);",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
